<!DOCTYPE html>
<html>

<head>
  <title>Simple To-Do List</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <main id="bodyBox">

    <fieldset id="fieldset">
      <legend id="legend"> Daily &
        Consistent
      </legend>
      <h1>TO-DO <span>&rArr;</span> TA-DA!</h1>
      <form action="/tasks" method="POST">
        <input id="task2Do" type=" text" name="task" placeholder="Add A New To-Dok">
        <button>ADD TO-DO</button>
      </form>

      <ul>
        <% tasks.forEach(task=> { %>
          <li>
            <%= task.task %>
              <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST">
                <button type="submit">TA-DA!</button>
              </form>
          </li>
          <% }); %>
      </ul>
    </fieldset>
  </main>
</body>

</html>